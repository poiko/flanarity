#version 150

in vec3 Color;
in vec2 Texcoord;

out vec4 outColor;

uniform sampler2D texKitten;
uniform sampler2D texPuppy;
uniform float time;

void main()
{
	vec2 uv = Texcoord;
	uv.x += sin(time + uv.x * 14.0f) * 0.02;
	uv.y += cos(time*2.0f + uv.y * 9.0f) * 0.03;
	outColor = texture(texKitten, uv);
	//vec4 colPuppy = texture(texPuppy, Texcoord);
}